<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>rabbitstewdio</groupId>
  <artifactId>global-parent-pom</artifactId>
  <version>1.1.4</version>
  <packaging>pom</packaging>

  <name>global-parent-pom</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <dependencies.scala.version>2.11.2</dependencies.scala.version>
    <dependencies.scala.version.short>2.11</dependencies.scala.version.short>
    <dependencies.scoverage.version>0.99.9</dependencies.scoverage.version>
    <dependencies.scoverage-maven-plugin.version>0.99.2</dependencies.scoverage-maven-plugin.version>
    <dependencies.slf4j.version>1.7.6</dependencies.slf4j.version>
  </properties>

  <organization>
    <name>Rabbit Stewdio Ltd.</name>
  </organization>

  <distributionManagement>
    <repository>
      <id>publish</id>
      <name>monkeyrepo</name>
      <url>http://repo.rabbitstewdio.local/monkeyrepo</url>
    </repository>
  </distributionManagement>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.scoverage</groupId>
        <artifactId>scalac-scoverage-plugin_${dependencies.scala.version.short}</artifactId>
        <version>${dependencies.scoverage.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>com.sap.prd.mobile.ios.maven.plugins</groupId>
        <artifactId>resolve-pom-maven-plugin</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <id>resolve-pom-props</id>
            <goals>
              <goal>resolve-pom-props</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <resolvedPomName>${project.build.directory}/resolvedPom.xml</resolvedPomName>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <groupId>org.apache.maven.plugins</groupId>
        <version>2.3</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>package</phase>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>net.alchim31.maven</groupId>
          <artifactId>scala-maven-plugin</artifactId>
          <version>3.2.0</version>
          <executions>
            <execution>
              <id>compile</id>
              <goals>
                <goal>add-source</goal>
                <goal>compile</goal>
              </goals>
              <configuration>
                <args>
                  <arg>-g:vars</arg>
                </args>
              </configuration>
            </execution>
            <execution>
              <goals>
                <goal>testCompile</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <sourceDir>src/main/scala</sourceDir>
            <jvmArgs>
              <jvmArg>-Xms64m</jvmArg>
              <jvmArg>-Xmx1024m</jvmArg>
            </jvmArgs>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-source-plugin</artifactId>
          <groupId>org.apache.maven.plugins</groupId>
          <version>2.3</version>
          <executions>
            <execution>
              <id>attach-sources</id>
              <phase>package</phase>
              <goals>
                <goal>jar-no-fork</goal>
              </goals>
            </execution>
          </executions>
        </plugin>

        <plugin>
          <artifactId>maven-dependency-plugin</artifactId>
          <executions>
            <execution>
              <phase>package</phase>
              <goals>
                <goal>copy-dependencies</goal>
              </goals>
              <configuration>
                <useSubDirectoryPerScope>true</useSubDirectoryPerScope>
                <useSubDirectoryPerType>true</useSubDirectoryPerType>
                <outputDirectory>${project.build.directory}/lib</outputDirectory>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <profiles>
    <profile>
      <id>scoverage</id>

      <dependencies>
        <dependency>
          <groupId>org.scoverage</groupId>
          <artifactId>scalac-scoverage-plugin_${dependencies.scala.version.short}</artifactId>
          <scope>provided</scope>
        </dependency>
      </dependencies>

      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.codehaus.mojo</groupId>
              <artifactId>cobertura-maven-plugin</artifactId>
              <version>2.6</version>
              <configuration>
                <instrumentation/>
                <formats>
                  <format>xml</format>
                  <format>html</format>
                </formats>
                <check/>
              </configuration>
              <executions>
                <execution>
                  <goals>
                    <goal>clean</goal>
                    <goal>instrument</goal>
                  </goals>
                </execution>
                <execution>
                  <id>generate-report</id>
                  <phase>package</phase>
                  <goals>
                    <goal>cobertura</goal>
                  </goals>
                </execution>
              </executions>
            </plugin>

            <plugin>
              <groupId>net.alchim31.maven</groupId>
              <artifactId>scala-maven-plugin</artifactId>
              <version>3.2.0</version>
              <executions>
                <execution>
                  <id>compile</id>
                  <goals>
                    <goal>add-source</goal>
                    <goal>compile</goal>
                  </goals>
                  <configuration>
                    <compilerPlugins>
                      <compilerPlugin>
                        <groupId>org.scoverage</groupId>
                        <artifactId>scalac-scoverage-plugin_${dependencies.scala.version.short}</artifactId>
                        <version>${dependencies.scoverage.version}</version>
                      </compilerPlugin>
                    </compilerPlugins>
                    <args>
                      <arg>-g:vars</arg>
                      <arg>-P:scoverage:dataDir:${project.build.directory}</arg>
                    </args>
                  </configuration>
                </execution>
                <execution>
                  <id>test</id>
                  <goals>
                    <goal>add-source</goal>
                    <goal>testCompile</goal>
                  </goals>
                </execution>
                <execution>
                  <goals>
                    <goal>testCompile</goal>
                  </goals>
                </execution>
              </executions>
              <configuration>
                <sourceDir>src/main/scala</sourceDir>
                <jvmArgs>
                  <jvmArg>-Xms64m</jvmArg>
                  <jvmArg>-Xmx1024m</jvmArg>
                </jvmArgs>
              </configuration>
            </plugin>
            <plugin>
              <groupId>org.scoverage</groupId>
              <artifactId>maven-scoverage-plugin</artifactId>
              <version>${dependencies.scoverage-maven-plugin.version}</version>
              <executions>
                <execution>
                  <id>generate-scoverage-report</id>
                  <phase>package</phase>
                  <goals>
                    <goal>report</goal>
                  </goals>
                </execution>
              </executions>
              <dependencies>
                <dependency>
                  <groupId>org.scoverage</groupId>
                  <artifactId>scalac-scoverage-plugin_${dependencies.scala.version.short}</artifactId>
                  <version>${dependencies.scoverage.version}</version>
                </dependency>
              </dependencies>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>
  </profiles>
</project>
